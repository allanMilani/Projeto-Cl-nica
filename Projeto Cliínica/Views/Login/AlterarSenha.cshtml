@{ ViewData["Title"] = "Alterar Senha"; }
<div class="row h-100">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto align-content-center h-100">
        <div class="card border-0 shadow rounded-3 my-5">
            <div class="card-body p-4 p-sm-5">
                <h2 class="card-title text-center mb-2 fw-light fs-5">Nova senha</h2>
                <p class="text-center">Digite a nova senha para o usuário administrador</p>
                <form action="/Login/AlterarSenha" method="post">
                    <div class="form-group mb-3">
                        <label>Senha Atual</label>
                        <input type="password" class="form-control" name="SenhaAtual" id="senhaAtual" placeholder="digite a senha atual" required>
                    </div>
                    <div class="form-group mb-3">
                        <label>Senha Atual Confirmação</label>
                        <input type="password" class="form-control" name="SenhaAtualConfirmacao" id="senhaAtualConfirmacao" placeholder="digite a senha atual" required>
                    </div>
                    <div class="form-group mb-3">
                        <label>Nova Senha</label>
                        <input type="password" class="form-control" name="NovaSenha" id="novaSenha" placeholder="digite a nova senha" required>
                    </div>
                    <div class="form-group mb-3">
                        <label>Nova Senha (Confirmação)</label>
                        <input type="password" class="form-control" name="NovaSenhaConfirmacao" id="novaSenhaConfirmacao" placeholder="confirme a nova senha" required>
                    </div>
                    <div class="form-group mb-3">
                        <span class="text-danger" id="retorno" style="display: none;">As novas senhas devem ser iguais!</span>
                    </div>
                    <div class="d-grid text-center">
                        <button class="btn btn-primary btn-login text-uppercase fw-bold" id="btnSalvar" type="submit">
                            Salvar
                        </button>
                    </div>
                </form>
                @if (ViewBag.Erro != null)
                {
                    <div class="alert alert-danger">@ViewBag.Erro</div>
                 }
            </div>
        </div>
    </div>
</div>