@{ Layout = null;
    ViewData["Title"] = "Alterar Senha"; }

@model Projeto_Cliínica.Models.Login;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="../Public/Css/login.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<div class="container h-100">
    <div class="row h-100">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto align-content-center h-100">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    <h2 class="card-title text-center mb-2 fw-light fs-5">Nova senha</h2>
                    <p class="text-center">Digite a nova senha para o usuário administrador</p>
                    <form action="/Login/AlterarSenhaAdmin" method="post">
                        <div class="form-group mb-3">
                            <label>Senha</label>
                            <input type="password" class="form-control" name="Senha" id="senha" placeholder="digite a nova senha" required>
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label>Senha (confirmação)</label>
                            <input type="password" class="form-control" name="SenhaConfirmacao" id="senhaConfirmacao" placeholder="digite novamente" required>
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <span class="text-danger" id="retorno" style="display: none;">As senhas devem ser iguais!</span>
                        </div>
                        <div class="d-grid text-center">
                            <button class="btn btn-primary btn-login text-uppercase fw-bold" id="btnSalvar" type="submit">
                                Salvar
                            </button>
                        </div>
                    </form>
                    @if (ViewBag.Erro != null)
                    {
                <div class="alert alert-danger">@ViewBag.Erro</div>}
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>